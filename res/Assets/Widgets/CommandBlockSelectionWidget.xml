<CreativeInventoryWidget xmlns="runtime-namespace:Game" Size="500, 310" HorizontalAlignment="Center" VerticalAlignment="Center">

	<RectangleWidget FillColor="80, 80, 80, 255" OutlineColor="140, 140, 140, 255"/>

	<CanvasWidget HorizontalAlignment="Center" VerticalAlignment="Center">

		<StackPanelWidget Direction="Vertical" Margin="2, 0">

			<CanvasWidget Size="0, 10"/>

			<StackPanelWidget Name="ControlsPanel" HorizontalAlignment="Center">
				<BevelledButtonWidget Name="CategoryLeftButton" Size="40, 40">
					<RectangleWidget Name="CategoryLeftRectangle" FillColor="100, 100, 100, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>
					<LabelWidget Text="L" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
				</BevelledButtonWidget>

				<CanvasWidget Size="10, 0"/>

				<CanvasWidget Size="120, 40" VerticalAlignment="Center">
					<RectangleWidget FillColor="80, 80, 80, 255" OutlineColor="100, 100, 100, 128" />
					<LabelWidget Name="CategoryLabel" Text="[CreativeInventoryWidget:1]" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
				</CanvasWidget>

				<CanvasWidget Size="10, 0"/>
				<BevelledButtonWidget Name="CategoryRightButton" Size="40, 40">
					<RectangleWidget Name="CategoryRightRectangle" FillColor="100, 100, 100, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>
					<LabelWidget Text="R" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
				</BevelledButtonWidget>

				<CanvasWidget Size="50, 0"/>

				<BevelledButtonWidget Name="PageUpButton" Size="40, 40">
					<RectangleWidget Name="PageUpRectangle" FillColor="100, 100, 100, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>
					<LabelWidget Text="U" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
				</BevelledButtonWidget>

				<CanvasWidget Size="10, 0"/>

				<BevelledButtonWidget Name="PageDownButton" Size="40, 40">
					<RectangleWidget Name="PageDownRectangle" FillColor="100, 100, 100, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>
					<LabelWidget Text="D" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
				</BevelledButtonWidget>

				<CanvasWidget Size="50, 0"/>
				<BevelledButtonWidget Name="BlockSelectionCancel" Size="60, 40">
					<RectangleWidget FillColor="100, 100, 100, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>
					<LabelWidget Text="取消" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
				</BevelledButtonWidget>

			</StackPanelWidget>

			<CanvasWidget Size="0, 10"/>
			<CanvasWidget Name="PanelContainer" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			<CanvasWidget Size="0, 10"/>

		</StackPanelWidget>

	</CanvasWidget>

</CreativeInventoryWidget>
