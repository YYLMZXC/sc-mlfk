<CanvasWidget xmlns="runtime-namespace:Game" Size="500, 420" HorizontalAlignment="Center" VerticalAlignment="Center">

	<StackPanelWidget Direction="Horizontal">

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

			<CanvasWidget Size="0, 10" />

			<StackPanelWidget Direction="Vertical" Margin="20, 0">

				<CanvasWidget Size="500, 60">

					<RectangleWidget FillColor="64, 64, 64, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>

					<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

						<CanvasWidget Size="200, 40" VerticalAlignment="Center">
							<RectangleWidget FillColor="80, 80, 80, 255" OutlineColor="100, 100, 100, 128" />
							<LabelWidget Text="动物选择界面" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
						</CanvasWidget>

						<CanvasWidget Size="60, 0"/>

						<BevelledButtonWidget Name="Order" Size="80, 40">
							<RectangleWidget FillColor="100, 100, 100, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>
							<LabelWidget Text="改序" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
						</BevelledButtonWidget>

						<CanvasWidget Size="10, 0"/>

						<BevelledButtonWidget Name="SelectionCancel" Size="80, 40">
							<RectangleWidget FillColor="100, 100, 100, 255" OutlineColor="140, 140, 140, 255" IsVisible="true"/>
							<LabelWidget Text="取消" Font="{Fonts/Pericles}" HorizontalAlignment="Center" Margin="0, 5" Color="255, 255, 255" />
						</BevelledButtonWidget>

					</StackPanelWidget>

				</CanvasWidget>

				<CanvasWidget>
					<RectangleWidget FillColor="80, 80, 80, 255" OutlineColor="128, 128, 128, 128" />
					<ListPanelWidget Name="CreaturesList" Direction="Vertical" Margin="5, 3" ItemSize="50" SelectionColor="60, 60, 60, 60"/>
				</CanvasWidget>

			</StackPanelWidget>

			<CanvasWidget Size="0, 10" />

		</StackPanelWidget>

	</StackPanelWidget>

</CanvasWidget>